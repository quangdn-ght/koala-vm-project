# PARALLEL PROCESSING SETTINGS
# Enable parallel processing for sync operations (true/false)
SYNC_ENABLE_PARALLEL=true
# Maximum number of concurrent workers for parallel processing (with connection pooling)
SYNC_MAX_WORKERS=3
# Batch size for CheckInOut sync (records per batch) - optimized for connection pool
SYNC_BATCH_SIZE=500
# Chunk size for User sync (users per chunk)
USER_CHUNK_SIZE=50
